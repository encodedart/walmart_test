<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/carImage"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="120dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/carName"
        app:layout_constraintTop_toTopOf="@id/carImage"
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/carDetail"
        app:layout_constraintTop_toBottomOf="@id/carName"
        app:layout_constraintStart_toStartOf="@id/carName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/inDealer"
        app:layout_constraintTop_toBottomOf="@id/carDetail"
        app:layout_constraintStart_toStartOf="@id/carDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buyButton"
        app:layout_constraintTop_toTopOf="@id/inDealer"
        app:layout_constraintTop_toBottomOf="@id/inDealer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:text="BUY"
        android:enabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>